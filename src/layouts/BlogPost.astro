---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import TableOfContents from '../components/TableOfContents.astro';
import SidebarOfContents from '../components/SidebarOfContents.astro';
import Twikoo from '../components/Twikoo.astro';
import defaultCover from '../assets/df-cover.webp';

type Props = Partial<CollectionEntry<'post'>['data']> & {
  title: string;
  description: string;
  pubDate: Date;
  heroImageWidth?: string;
  showDate?: boolean;
  twikooEnvId?: string;
  isEncrypted?: boolean;
};

const { title, description, pubDate, updatedDate, heroImage, heroImageWidth, showDate = true, twikooEnvId } = Astro.props;
const displayImage = heroImage || defaultCover;
---

<html lang="zh-CN">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="min-h-screen flex flex-col bg-background-light text-text-light dark:bg-background-dark dark:text-text-dark">
		<Header />
		<TableOfContents />
		<SidebarOfContents />
		<main class="flex-1 pt-2 page-transition">
			<div class="max-w-[1340px] mx-auto">
				<!-- 大屏幕布局 -->
				<div class="hidden xl:grid grid-cols-[272px_1fr_272px] gap-8">
					<div></div>
					<article class="px-4 sm:px-6 lg:px-8 py-16">
						<div class={heroImageWidth ? "mt-12 mb-12 mx-auto overflow-hidden rounded-full shadow-lg bg-hero-light dark:bg-hero-dark transition-transform duration-300 ease-[cubic-bezier(0.25,0.46,0.45,0.94)] hover:scale-110 cursor-pointer" : "mb-12 overflow-hidden rounded-3xl shadow-lg bg-hero-light dark:bg-hero-dark transition-transform duration-300 ease-[cubic-bezier(0.25,0.46,0.45,0.94)] hover:scale-105 cursor-pointer"} style={heroImageWidth ? `width: ${heroImageWidth}px; aspect-ratio: 1/1;` : 'aspect-ratio: 2/1;'}>
							<div
								class="w-full h-full bg-cover bg-center"
								style={`background-image: url('${typeof displayImage === 'string' ? displayImage : displayImage.src}');`}
								aria-label="文章封面"
							></div>
						</div>
						<div class="text-center mb-12">
							{showDate && (
								<div class="text-text-light/80 dark:text-text-dark/80 text-sm mb-4">
									<FormattedDate date={pubDate} />
									{updatedDate && (
										<div class="text-xs italic mt-1">
											Last updated on <FormattedDate date={updatedDate} />
										</div>
									)}
								</div>
							)}
							<h1 class="text-4xl font-bold text-text-light dark:text-text-dark mb-4">{title}</h1>
							<p class="text-lg text-text-light/80 dark:text-text-dark/80 max-w-xl mx-auto">{description}</p>
						</div>
						<div class="prose prose-lg max-w-none text-text-light dark:prose-invert dark:text-text-dark prose-headings:font-bold prose-a:text-primary-light dark:prose-a:text-primary-dark prose-blockquote:border-l-primary-light dark:prose-blockquote:border-l-primary-dark prose-code:bg-badge-light dark:prose-code:bg-badge-dark">
							<slot />
						</div>
						{twikooEnvId && (
							<>
								{/* 评论区分隔区域 */}
								<div class="mt-16 mb-8 flex flex-col items-center gap-4">
									<div class="flex items-center gap-3">
										<div class="h-px w-32 bg-gradient-to-r from-transparent to-text-light/20 dark:to-text-dark/40"></div>
										<div class="flex items-center gap-2 px-4 py-2 rounded-full bg-badge-light dark:bg-badge-dark/60">
											<svg class="w-5 h-5 text-primary-light dark:text-primary-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
											</svg>
											<span class="text-sm font-medium text-text-light dark:text-text-dark">评论区</span>
										</div>
										<div class="h-px w-32 bg-gradient-to-l from-transparent to-text-light/20 dark:to-text-dark/40"></div>
									</div>
								</div>
								<Twikoo envId={twikooEnvId} />
							</>
						)}
					</article>
					<div></div>
				</div>
				<!-- 中等屏幕和小屏幕布局 -->
				<div class="xl:hidden">
					<article class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
						<div class={heroImageWidth ? "mt-12 mb-12 mx-auto overflow-hidden rounded-full shadow-lg bg-hero-light dark:bg-hero-dark transition-transform duration-300 ease-[cubic-bezier(0.25,0.46,0.45,0.94)] hover:scale-110 cursor-pointer" : "mb-12 overflow-hidden rounded-3xl shadow-lg bg-hero-light dark:bg-hero-dark transition-transform duration-300 ease-[cubic-bezier(0.25,0.46,0.45,0.94)] hover:scale-105 cursor-pointer"} style={heroImageWidth ? `width: ${heroImageWidth}px; aspect-ratio: 1/1;` : 'aspect-ratio: 2/1;'}>
							<div
								class="w-full h-full bg-cover bg-center"
								style={`background-image: url('${typeof displayImage === 'string' ? displayImage : displayImage.src}');`}
								aria-label="文章封面"
							></div>
						</div>
						<div class="text-center mb-12">
							{showDate && (
								<div class="text-text-light/80 dark:text-text-dark/80 text-sm mb-4">
									<FormattedDate date={pubDate} />
									{updatedDate && (
										<div class="text-xs italic mt-1">
											Last updated on <FormattedDate date={updatedDate} />
										</div>
									)}
								</div>
							)}
							<h1 class="text-4xl font-bold text-text-light dark:text-text-dark mb-4">{title}</h1>
							<p class="text-lg text-text-light/80 dark:text-text-dark/80 max-w-xl mx-auto">{description}</p>
						</div>
						<div class="prose prose-lg max-w-none text-text-light dark:prose-invert dark:text-text-dark prose-headings:font-bold prose-a:text-primary-light dark:prose-a:text-primary-dark prose-blockquote:border-l-primary-light dark:prose-blockquote:border-l-primary-dark prose-code:bg-badge-light dark:prose-code:bg-badge-dark">
							<slot />
						</div>
						{twikooEnvId && (
							<>
								{/* 评论区分隔区域 */}
								<div class="mt-16 mb-8 flex flex-col items-center gap-4">
									<div class="flex items-center gap-3">
										<div class="h-px w-32 bg-gradient-to-r from-transparent to-text-light/20 dark:to-text-dark/40"></div>
										<div class="flex items-center gap-2 px-4 py-2 rounded-full bg-badge-light dark:bg-badge-dark/60">
											<svg class="w-5 h-5 text-primary-light dark:text-primary-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
											</svg>
											<span class="text-sm font-medium text-text-light dark:text-text-dark">评论区</span>
										</div>
										<div class="h-px w-32 bg-gradient-to-l from-transparent to-text-light/20 dark:to-text-dark/40"></div>
									</div>
								</div>
								<Twikoo envId={twikooEnvId} />
							</>
						)}
					</article>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
